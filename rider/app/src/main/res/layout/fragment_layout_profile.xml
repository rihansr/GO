<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_Bg"
    tools:context=".fragment.ProfileFragment">

    <!--Personal Information-->
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/profilePhotoHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_minus52sdp"
        android:paddingTop="@dimen/_76sdp"
        android:paddingStart="@dimen/padding_XX_Large"
        android:paddingEnd="@dimen/padding_XX_Large"
        android:paddingBottom="@dimen/padding_Large"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="never">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--FullName-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Default"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/editName"
                    style="@style/HintTvStyle"
                    android:drawableEnd="@drawable/ic_edit_pen"
                    android:text="@string/nameTitle"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/name_Input_Etxt"
                    style="@style/InputFieldStyle"
                    android:backgroundTint="@android:color/transparent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Email-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Default"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/HintTvStyle"
                    android:text="@string/emailTitle"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email_Input_Etxt"
                    style="@style/InputFieldStyle"
                    android:backgroundTint="@android:color/transparent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Phone-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Default"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/HintTvStyle"
                    android:text="@string/phoneTitle"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/phone_Input_Etxt"
                    style="@style/InputFieldStyle"
                    android:backgroundTint="@android:color/transparent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Gender-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Default"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/editGender"
                    style="@style/HintTvStyle"
                    android:drawableEnd="@drawable/ic_edit_pen"
                    android:text="@string/genderTitle"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/gender_Input_Etxt"
                    style="@style/InputFieldStyle"
                    android:backgroundTint="@android:color/transparent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Address-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Default"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/editAddress"
                    style="@style/HintTvStyle"
                    android:drawableEnd="@drawable/ic_edit_pen"
                    android:text="@string/addressTitle"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/address_Input_Etxt"
                    style="@style/InputFieldStyle"
                    android:maxLines="3"
                    android:backgroundTint="@android:color/transparent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Default"
                android:orientation="horizontal">

                <!--Gender-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_Default"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/editDistrict"
                        style="@style/HintTvStyle"
                        android:drawableEnd="@drawable/ic_edit_pen"
                        android:text="@string/districtTitle"/>

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/district_Input_Etxt"
                        style="@style/InputFieldStyle"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:backgroundTint="@android:color/transparent"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--Age-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/editUpazilla"
                        style="@style/HintTvStyle"
                        android:drawableEnd="@drawable/ic_edit_pen"
                        android:text="@string/upazilaTitle"/>

                    <com.go.rider.wiget.InstantAutoCompleteTextView
                        android:id="@+id/upazila_Input_Etxt"
                        style="@style/InputFieldStyle"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:backgroundTint="@android:color/transparent"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Gender-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_Default"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/editPostalCode"
                        style="@style/HintTvStyle"
                        android:drawableEnd="@drawable/ic_edit_pen"
                        android:text="@string/postalCodeTitle"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/postalCode_Input_Etxt"
                        style="@style/InputFieldStyle"
                        android:digits="0123456789"
                        android:backgroundTint="@android:color/transparent"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--Age-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HintTvStyle"
                        android:text="@string/countryTitle"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/country_Input_Etxt"
                        style="@style/InputFieldStyle"
                        android:backgroundTint="@android:color/transparent"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <!--Cover Photo-->
    <com.go.rider.wiget.ArcView
        android:id="@+id/coverPhotoHolder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/coverPhoto_size"
        app:layout_collapseMode="parallax"
        app:shape_arc_cropDirection="outside"
        app:shape_arc_height="@dimen/_12sdp"
        app:shape_arc_position="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cover_Photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/shape_placeholder"
                android:scaleType="centerCrop"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coverPhotoUpload_Progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                android:alpha=".7"
                tools:text="99%"
                android:textSize="@dimen/text_Size_Default"
                android:textColor="@color/colorSmokeWhite"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_Small"
                android:paddingEnd="@dimen/padding_Small"
                android:layout_marginTop="@dimen/margin_XX_Large">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back_Btn"
                    android:layout_width="@dimen/icon_Size_X_Large"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/padding_Default"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_arrow_left" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/upload_CoverPhoto"
                    android:layout_width="@dimen/icon_Size_X_Large"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/padding_Default"
                    android:layout_gravity="top|end"
                    android:alpha=".5"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_upload"/>

            </RelativeLayout>

        </FrameLayout>

    </com.go.rider.wiget.ArcView>

    <!--Profile Photo-->
    <RelativeLayout
        android:id="@+id/profilePhotoHolder"
        android:layout_below="@+id/coverPhotoHolder"
        android:layout_marginTop="@dimen/_minus48sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/profile_Photo_Holder"
            android:layout_width="@dimen/icon_Size_XXXXX_Large"
            android:layout_height="@dimen/icon_Size_XXXXX_Large">

            <com.go.rider.wiget.CircleImageView
                android:id="@+id/profile_Photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_round"
                android:backgroundTint="@android:color/white"
                android:padding="@dimen/padding_X_Small"
                android:layout_margin="@dimen/margin_Small"
                tools:src="@drawable/ic_avatar_male"
                android:elevation="@dimen/card_Elevation_Medium"/>

            <ProgressBar
                android:id="@+id/profilePhotoUpload_ProgressBar"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:progress="0"
                android:max="100"
                android:rotation="45"
                android:indeterminate="false"
                android:visibility="invisible"
                android:progressDrawable="@drawable/shape_progress"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profilePhotoUpload_Progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                android:alpha=".7"
                tools:text="99%"
                android:textSize="@dimen/text_Size_Small"
                android:textColor="@color/colorSmokeWhite"/>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/upload_ProfilePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:clickable="false"
            android:focusable="false"
            android:layout_below="@+id/profile_Photo_Holder"
            android:layout_toEndOf="@+id/profile_Photo_Holder"
            android:layout_marginStart="@dimen/_minus26sdp"
            android:layout_marginTop="@dimen/_minus26sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_upload_camera" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</RelativeLayout>