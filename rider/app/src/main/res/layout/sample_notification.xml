<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_X_Large"
    android:orientation="vertical"
    tools:context=".adapter.NotificationAdapter">

    <!--Notification Image-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_136sdp"
        android:background="@color/colorSmokeWhite"
        android:layout_marginBottom="@dimen/margin_Medium"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!--Notification Content-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Notification Icon-->
        <com.go.rider.wiget.CircleImageView
            android:layout_width="@dimen/icon_Size_Large"
            android:layout_height="@dimen/icon_Size_Large"
            android:padding="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/margin_Large"
            android:background="@drawable/shape_round"
            android:adjustViewBounds="true"
            android:src="@drawable/go_logo"/>

        <!--Notification Details-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--Title-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_XX_Small"
                android:layout_marginBottom="@dimen/margin_XX_Small"
                tools:text="Notification Title"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/text_Size_X_Small"
                android:textColor="@color/font_Color_Dark"
                android:visibility="gone"
                tools:visibility="visible"/>

            <!--Message-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_XX_Small"
                android:layout_marginBottom="@dimen/margin_XX_Small"
                tools:text="Message, bla blaa blaaaa"
                android:textSize="@dimen/text_Size_XX_Small"
                android:textColor="@color/font_Color_Gray"
                android:visibility="gone"
                tools:visibility="visible"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>