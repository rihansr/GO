<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:maxWidth="@dimen/snippet_Width"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_Medium"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.HomeActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--Duration-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_X_Small"
            android:paddingStart="@dimen/padding_Medium"
            android:paddingEnd="@dimen/padding_Medium"
            android:paddingBottom="@dimen/padding_X_Small"
            android:background="@drawable/shape_placeholder"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0"
                android:textColor="@color/font_Color_Light"
                android:textSize="@dimen/_8ssp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timeUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minute"
                android:textColor="@color/font_Color_Light"
                android:textAllCaps="true"
                android:textSize="@dimen/_7ssp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Place Name-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/placeName"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTint="@color/icon_Color_Green"
            android:paddingTop="@dimen/padding_X_Small"
            android:paddingStart="@dimen/padding_Medium"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/padding_X_Small"
            android:gravity="center_vertical"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/font_Color_Dark"
            tools:text="@string/home"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow"
            android:tint="@color/icon_Color_Green"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>