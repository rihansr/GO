<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:top="@dimen/_8sdp"
        android:bottom="@dimen/_8sdp"
        android:gravity="center">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerColor="#01C7C0"
                android:endColor="@color/colorAccent"
                android:startColor="@color/colorPrimary" />
            <size android:width="@dimen/border_Small" android:height="@dimen/_24sdp"/>
        </shape>
    </item>

    <item
        android:gravity="top"
        android:drawable="@drawable/ic_location_from"/>

    <item
        android:gravity="bottom"
        android:drawable="@drawable/ic_location_to"/>
</layer-list>