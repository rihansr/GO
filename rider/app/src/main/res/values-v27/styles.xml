<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Launcher Theme-->
    <style name="AppTheme.Launcher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Launcher.FullLight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher.FullDark">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Launcher.TopLight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorSmokeWhite</item>
    </style>


    <!--Dialog Theme-->
    <style name="Dialog.FullLight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="Dialog.FullDark">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

    <style name="Dialog.TopLight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
    </style>

</resources>